@model LoginModel
<h1 class="h3">Giriş Yap</h1>
<hr />
<meta charset="utf-8">
<div class="w-100">
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Account" asp-action="Login" method="POST">
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl"/>
              
      
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label">Kullanıcı E-mail</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-2 col-form-label">Parola</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        <a href="/account/forgotpassword" class="btn btn-link">Şifremi Unuttum</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
