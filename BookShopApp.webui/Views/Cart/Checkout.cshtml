@model OrderModel

<div class="row">
    <h1 class="font-weight-light display-5 text-muted">Ödeme</h1>
</div>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayı</h4>
        <form method="POST" asp-controller="Cart" asp-action="Checkout">
            <input type="hidden" name="cartId" value="0">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName"><h6 class="font-weight-light display-5 text-muted"> Ad </h6></label>
                    <input asp-for="@Model.FirstName" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName"><h6 class="font-weight-light display-5 text-muted"> Soyad </h6></label>
                    <input asp-for="@Model.LastName" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address"><h6 class="font-weight-light display-5 text-muted"> Adres Bilgisi </h6></label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>
