                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Phone"><h6 class="font-weight-light display-5 text-muted"> Telefon Numarası </h6></label>
                    <input asp-for="@Model.Phone" class="form-control" placeholder="(___)(_______)">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Email"><h6 class="font-weight-light display-5 text-muted"> Email </h6></label>
                    <input asp-for="@Model.Email" class="form-control">
                </div>
            </div>
            <h4 class="mb-3">Ödeme Bilgileri</h4>
            <hr class="mb-3">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardName"><h6 class="font-weight-light display-5 text-muted"> Kart Sahibinin İsmi </h6></label>
                    <input asp-for="@Model.CardName" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CardNumber"><h6 class="font-weight-light display-5 text-muted"> Kart Numarası </h6></label>
                    <input asp-for="@Model.CardNumber" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth"><h6 class="font-weight-light display-5 text-muted"> Son Kullama Ayı </h6></label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear"><h6 class="font-weight-light display-5 text-muted"> Son Kullanma Yılı </h6></label>
                    <input asp-for="@Model.ExpirationYear" class="form-control">
                </div>


            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.Cvv"><h6 class="font-weight-light display-5 text-muted"> Cvc </h6></label>
                    <input asp-for="@Model.Cvv" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-block text-muted" style="background-color: #64ebc6">Ödeme Yap</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span><h6 class="font-weight-light display-5 text-muted"> Özet Bilgiler </h6></span>
        </h4>
        <ul class="list-group mb-3">

            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.KitapAdi</h6>
                    </div>
                    <span class="text-muted">@item.Ucret?.ToString("c")</span>
                </li>
            }
        <li class="list-group-item d-flex justify-content-between">
            <span><h6 class="font-weight-light display-5 text-muted"> Kargo </h6></span>
            <strong>9.99</strong>
<li class="list-group-item d-flex justify-content-between">
                <span><h6 class="font-weight-light display-5 text-muted"> Toplam (TL) </h6></span>
                <strong>@Model.CartModel.OrderPrice()?.ToString("c")</strong>
            </li>
        </ul>
    </div>
</div>