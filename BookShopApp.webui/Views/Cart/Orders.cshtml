@model List<OrderListModel>

<div class="row">
    <h1 class="font-weight-light display-5 text-muted">Siparişler</h1>
</div>
<hr>



@foreach (var order in Model)
{
    <table class="table table-bordered table-sm mb-3">
        <thead style="background-color:#e6dc9d">
            <tr>
                <td colspan="2">Sipariş Numarası: #@order.OrderNumber</td>
                <th>Ücret</th>
                <th>Adet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
	         {
		        <tr>
                    <td><img src="~/img/@orderItem.ImageUrl" alt="" width="50"/></td>
                    <td>@orderItem.Name</td>
                    <td>@orderItem.Ucret</td>
                    <td>@orderItem.Quantity</td>
                </tr>
	         }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">Müşteri Adı</td>
                <td>@order.FirstName @order.LastName</td>
                <td rowspan="6">Toplam: @order.OrderPrice().ToString("c")</td>
            </tr>
            <tr>
                <td colspan="2">Adres Bilgisi: </td>
                <td>@order.Address</td>
            </tr>
            <tr>
                <td colspan="2">Email: </td>
                <td>@order.Email</td>
            </tr>
            <tr>
                <td colspan="2">Telefon: </td>
                <td>@order.Phone</td>
            </tr>
            <tr>
                <td colspan="2">Sipariş Durumu: </td>
                <td>@order.OrderState</td>
            </tr>
            <tr>
                <td colspan="2">Ödeme Türü: </td>
                <td>@order.PaymentType</td>
            </tr>
        </tfoot>
    </table>

}