@model ProductMainCategoryViewModel
@{ var counter = 10;}
<partial name="_header">
    <div class="w-100">
        <div class="row">
            <div class="col-md-3">
                @await Html.PartialAsync("_maincategories", Model.MainCategories)
                @await Html.PartialAsync("_search")
            </div>

          
          
            <div class="col-md-9">
                <div class="row p-2">
                    <h3 class="font-weight-light display-5" style="text-align: center;"> Öne Çıkanlar </h3>

                    <div id="carouselExampleIndicators" class="carousel slide mx-auto" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="row">
                                    @for (int i = 0; i < 3; i++)
                                    {
                                        var item = Model.Products[counter];
                                        @await Html.PartialAsync("_product", item);
                                        counter++;
                                    }
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row">
                                    @for (int i = 0; i < 3; i++)
                                    {
                                        var item = Model.Products[counter];
                                        @await Html.PartialAsync("_product", item);
                                        counter++;
                                    }
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row">
                                    @for (int i = 0; i < 3; i++)
                                    {
                                        var item = Model.Products[counter];
                                        @await Html.PartialAsync("_product", item);
                                        counter++;
                                    }
                                </div>
                            </div>
                        </div>

                        <a class="carousel-control-prev float-left inline-block text-dark" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next float-right inline-block text-dark" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <p></p>

                    @foreach (var product in Model.Products)
                    {

                        <div class="col-md-4">
                            @await Html.PartialAsync("_product", product)
                        </div>
                    }


                </div>
            </div>

        </div>
    </div>
    @section Scripts
    {
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    }
