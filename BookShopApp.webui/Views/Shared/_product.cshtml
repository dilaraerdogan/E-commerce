@model Product
    <div class="card-deck">
        <div class="card bg-light mb-2"  style="min-height:560px; max-width:300px">
            <div class="card-body text-center">
               

                <img class="card-image-top img-fluid  rounded mx-auto d-block" src="~/img/@Model.ResimUrl" alt="">

                <p class="card-title  mt-2 text-center">@Model.KitapAdi</p>
                <small class="text-primary">
                    <i class="fas fa-lira-sign"></i>@Model.Ucret
                </small>
            </div>
            <div class="card-footer text-center" style="background-color: #fefefe">
                <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-sm" style="background-color: #f3efa2">İncele</a>
                @if (User.Identity.IsAuthenticated)
                {
                    @if(User.IsInRole("Customer"))
                    { 
                        <a href="shop/addfavorite/@Model.ProductId" class="btn btn-sm ml-2" style="background-color: #ff6e5f">Favorilere Ekle</a>
                        @if (Model.StokAdedi > 0)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline">
                                <input type="hidden" name="ProductId" value="@Model.ProductId" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm mt-2" style="background-color: #ff6a00">Sepete Ekle</button>
                            </form>
                        }
                    }

                }

            </div>
        </div>
    </div>
